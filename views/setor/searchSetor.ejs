<%- include("../layouts/header", {title: 'BUSCA DE SETORES' }) %>

  <%- include("../layouts/menu") %>

    <div class="container_1">
      <h1>Busca de Setores</h1>
      <div class="coluna_1">
        <div class="coluna_conteudo">
          <a href="/setorNovo">Adicionar dados motor</a>
        </div>
        <div class="coluna_conteudo">
          <a href="/">Editar dados do setor</a>
        </div>
        <div class="coluna_conteudo">
          <a href="/">Buscar dados do setor</a>
        </div>
      </div>
      <!--////////////////////////////////////////////////////////////////////////////////////////////////////////////  -->
      <form action="/setorSearch/:nomeSetor/:nomeLinha" method="POST">
        <div class="field">
          <label class="label">Nome Setor</label>
          <div class="control">
            <input class="input" type="text" name="nomeSetor" placeholder="Informe o nome do Setor" required>
          </div>
        </div>

        <div class="field">
          <label class="label">Nome Linha Setor</label>
          <div class="control">
            <input class="input" type="text" name="nomeLinha" placeholder="Informe o nome da linha do setor">
          </div>
        </div>

        <div class="field">
          <div class="control">
            <button type="submit" class="button is-success">BUSCAR</button>
          </div>
        </div>
      </form>
      <!--////////////////////////////////////////////////////////////////////////////////////////////////////////////  -->
      <div class="container_tabela">
      <table>
        <thead>
          <tr class="item">
            <th>ID</th>
            <th>Fabricante</th>
            <th>Modelo</th>
            <th>Potencia</th>
          </tr>
        </thead>
        <tbody>
          <% motores.forEach(motor=> { %>
            <tr class="item">
              <td>
                <%= motor.id_motores %>
              </td>
              <td>
                <%= motor.fabricante_motor %>
              </td>
              <td>
                <%= motor.modelo_motor %>
              </td>
              <td>
                <%= motor.potencia_motor %>
              </td>
              <td>
              <a href="/motores/<%=motor.id_motores%>?_method=delete">Remover</a>
              </td>
            </tr>
            <% }) %>
        </tbody>
      </table>
    </div>
    </div>

    <%- include("../layouts/footer") %>